{
    "name": "infobipcth/forms-computed-language",
    "type": "project",
    "description": "A library for handling computed language in forms",
    "keywords": [
        "infobip",
        "forms",
        "computed",
        "language"
    ],
    "license": "proprietary",
    "authors": [
        {
            "name": "Mario Borna Mjertan",
            "email": "marioborna.mjertan@infobip.com"
        },
        {
            "name": "Denis Å½oljom",
            "email": "denis.zoljom@infobip.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "nikic/php-parser": "^5.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.9",
        "pestphp/pest": "^3.0",
        "php-parallel-lint/php-parallel-lint": "^1.3.2",
        "php-parallel-lint/php-console-highlighter": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "FormsComputedLanguage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test:standards": "vendor/bin/phpcs",
        "test:unit": "@php ./vendor/bin/pest",
        "test:lint": "@php ./vendor/php-parallel-lint/php-parallel-lint/parallel-lint . -e php --show-deprecated --exclude vendor --exclude .git",
        "test:coverage": "@php -dxdebug.mode=coverage ./vendor/bin/pest --coverage",
        "test": [
            "@test:standards",
            "@test:lint",
            "@test:unit"
        ]
    }
}
